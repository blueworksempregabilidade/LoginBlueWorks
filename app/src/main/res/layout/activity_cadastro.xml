<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="CadastroActivity">


    <TextView
        android:id="@+id/digite_dados"
        android:layout_width="165dp"
        android:layout_height="57dp"
        android:text="Digite Seus Dados"
        android:textSize="24dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="26dp" />

    <TextView
        android:id="@+id/text_info"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:text="informe os dados abaixo e cadastre-se no site :"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="99dp" />

    <ImageView
        android:id="@+id/image_user"
        android:layout_width="121dp"
        android:layout_height="103dp"
        android:background="#A6A6A6"
        android:padding="24dp"
        android:src="@drawable/ic_person"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/image_perfil"
        android:layout_width="120dp"
        android:layout_height="28dp"
        android:background="#5271FF"
        android:letterSpacing="0.03"
        android:text="imagem perfil"
        android:textColor="@color/white"
        android:textSize="14dp"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="142dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informações Gerais "
        android:textSize="18dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="209dp" />


    <EditText
        android:id="@+id/edit_text_nome"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:hint="Nome:*"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="258dp" />

    <EditText
        android:id="@+id/edit_text_cpf"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:hint="CPF:*"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="327dp" />

    <EditText
        android:id="@+id/edit_text_data"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:hint="Nascimento:*"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="391dp" />

    <EditText
        android:id="@+id/edit_text_school"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:hint="Escolaridade:*"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="455dp" />

    <EditText
        android:id="@+id/edit_text_about_me"
        android:layout_width="379dp"
        android:layout_height="77dp"
        android:hint="Sobre mim :"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="522dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="124dp"
        android:layout_height="35dp"
        tools:layout_editor_absoluteX="229dp"
        tools:layout_editor_absoluteY="633dp"
        android:background="@drawable/bg_button_normal"
        android:textColor="@color/white"
        android:text="Proxímo"/>


</androidx.constraintlayout.widget.ConstraintLayout>